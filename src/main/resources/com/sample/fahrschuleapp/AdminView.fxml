<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="520.0" style="-fx-background-color: #E5DEBF;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.fahrschuleapp.AdminController">
   <top>
      <AnchorPane prefHeight="75.0" prefWidth="349.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="15.0" layoutY="15.0" text="Logged in as," textFill="#0d7c26">
               <font>
                  <Font name="Times New Roman Bold" size="10.0" />
               </font>
            </Label>
            <Label layoutX="75.0" layoutY="14.0" text="Administrator">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Label>
            <Button fx:id="logoutbtn" alignment="CENTER" layoutX="15.0" layoutY="38.0" mnemonicParsing="false" onAction="#logoutButtonPressed" prefHeight="15.0" prefWidth="50.0" style="-fx-background-color: #0D7C26;" text="Logout" textFill="#e5debf">
               <font>
                  <Font name="Times New Roman Bold" size="10.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </top>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="registerUserbtn" layoutX="17.0" layoutY="14.0" mnemonicParsing="false" onAction="#registerUserButtonPressed" text="Register Student / Instructor" textFill="#0d7c26" AnchorPane.leftAnchor="17.0" AnchorPane.rightAnchor="17.0" />
            <Button fx:id="deleteUserButton" layoutX="17.0" layoutY="45.0" mnemonicParsing="false" onAction="#deleteUserButtonOnAction" prefHeight="25.0" prefWidth="165.0" text="Delete Student / Instructor" textFill="#0d7c26" AnchorPane.leftAnchor="17.0" AnchorPane.rightAnchor="17.0" />
         </children></AnchorPane>
   </right>
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
